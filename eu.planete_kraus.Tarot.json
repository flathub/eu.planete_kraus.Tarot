    "modules": [
	{
	    "name": "tarot",
	    "buildsystem": "autotools",
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://play-tarot.frama.io/tarot-releases/tarot-1.2.2.tar.gz",
		    "sha256": "d1580bc778aaf97ab97931bd225ac1def984a99501b1e20774f17885f292a3c3"
		}
	    ],
	    "config-opts": [
		"--enable-silent-rules=yes"
	    ]
	}
    ]
}

