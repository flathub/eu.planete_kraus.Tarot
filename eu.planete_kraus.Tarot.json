{
    "app-id": "eu.planete_kraus.Tarot",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "19.08",

    "command": "tarot",
    "finish-args": [
	"--socket=x11",
	"--socket=wayland",
	"--share=ipc"
    ],
    "cleanup": [
	"/include",
	"*.a",
	"*.pc",
	"tarot/api.xml",
	"*.gir",
	"*.vapi",
	"*.typelib",
        "share/tarot/dataset"
    ],
    "modules": [
	{
	    "name": "guile",
	    "buildsystem": "autotools",
	    "sources": [
	        {
		    "type": "archive",
		    "url": "https://ftp.gnu.org/gnu/guile/guile-2.2.6.tar.gz",
		    "sha256": "08c0e7487777740b61cdd97949b69e8a5e2997d8c2fe6c7e175819eb18444506"
		}
	    ]
	},
	{
	    "name": "tarot",
	    "buildsystem": "autotools",
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://play-tarot.frama.io/tarot-releases/tarot-1.5.1.tar.gz",
		    "sha256": "0f6871d5b22671241612e66e7eb0dc772607333045f09a5458cc0f0ee5cf17a3"
		}
	    ],
	    "config-opts": [
		"--enable-silent-rules=yes"
	    ]
	}
    ]
}

