{
    "app-id": "eu.planete_kraus.Tarot",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "18.08",

    "command": "tarot",
    "finish-args": [
	"--socket=x11",
	"--socket=wayland",
	"--share=ipc"
    ],
    "cleanup": [
	"/include",
	"*.a",
	"*.pc",
	"libtarot/api.xml",
	"*.gir",
	"*.vapi",
	"*.typelib"
    ],
    "modules": [
	{
	    "name": "tarot",
	    "buildsystem": "autotools",
	    "sources": [
		{
		    "type": "archive",
		    "url": "https://play-tarot.frama.io/tarot-releases/tarot-1.2.3.tar.gz",
		    "sha256": "ef2630851c1be7c0f50141a753d9aed8999d13089efb3bfa337b977cebbf6430"
		}
	    ],
	    "config-opts": [
		"--enable-silent-rules=yes"
	    ]
	}
    ]
}

